<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="devchallenge.labyrinth.MainActivity">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controll_view"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:id="@+id/labyrinth_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true">

        </FrameLayout>
    </RelativeLayout>


    <GridLayout
        android:id="@+id/controll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/move_up"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:onClick="onClick"
            android:src="@drawable/ic_arrow_upward_black_24dp" />

        <ImageButton
            android:id="@+id/move_left"
            android:onClick="onClick"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageButton
            android:id="@+id/move_right"
            android:layout_column="2"
            android:onClick="onClick"
            android:rotation="180"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageButton
            android:id="@+id/move_down"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="onClick"
            android:rotation="180"
            android:src="@drawable/ic_arrow_upward_black_24dp" />
    </GridLayout>

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:src="@drawable/ic_pause_black_24dp" />

</RelativeLayout>
