<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/orange_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:imageButtonStyle">@style/MyButton</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="imageButtonStyle">@style/MyButton</item>

    </style>

    <style name="MyButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/m_dimen</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
    </style>


</resources>
