<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_dialog" android:state_enabled="false">

    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/orange_light" />
            <stroke android:width="1dp" android:color="@color/orange_dark" />
            <corners android:radius="3dp" />
            <padding android:bottom="@dimen/s_dimen" android:left="@dimen/s_dimen" android:right="@dimen/s_dimen" android:top="@dimen/s_dimen" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange_dark" android:startColor="@color/orange_light" />
            <stroke android:width="1dp" android:color="@color/orange_dark" />
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/s_dimen" android:left="@dimen/s_dimen" android:right="@dimen/s_dimen" android:top="@dimen/s_dimen" />
        </shape>
    </item>


</selector>